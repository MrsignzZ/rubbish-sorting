.container .card {
  display: flex;
  flex-direction: column;
  width: 690rpx;
  margin: 20rpx 30rpx;
  background-color: #fff;
  border: solid 1px rgba(207, 216, 220, 0.2);
  box-shadow: 0px 5px 10px rgba(172, 181, 185, 0.4);
}
.container .card .input {
  display: flex;
  flex-direction: row;
  margin: 16rpx;
}
.container .card .input .addr {
  font-size: 16px;
  line-height: 28px;
}
.container .card .input .icon-arrow {
  width: 20rpx;
  height: 12rpx;
  margin-top: 24rpx;
  margin-left: 10rpx;
  background-image: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAACIAAAAUBAMAAAAaSvJBAAAAElBMVEVHcEwjIyMjIyMjIyMiIiIjIyNLmUehAAAABnRSTlMASeNQ/lfsA/WrAAAAa0lEQVR4AW3QQQ6FIAwEUP4n7j2C4QQcYtizwPtfRWgbOo2ykHF8jUnT+/xKpbdczvRHo2bgmg36Lg7MJoPQAKo8u5Pml5HOt3/bwect0bhF+oVmIoaYCLqZCEIgggJRFMhCkaxV1Y916nkA0EscfsPUfcIAAAAASUVORK5CYII=);
  background-size: cover;
}
.container .card .input .search {
  flex: 1 1 auto;
  margin-left: 16rpx;
  display: flex;
  border-radius: 8rpx;
  align-items: center;
  border: solid 1px rgba(207, 216, 220, 0.2);
}
.container .card .input .search .icon-search {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
  background-image: url(data:image/png;base64,);
  background-size: cover;
}
.container .card .input .search input {
  flex: 1;
  background-color: #ecf3fe;
  opacity: 0.1;
  margin-left: 16rpx;
  opacity: 0.5;
  color: #78909c;
  font-size: 14px;
  line-height: 16px;
}
.container .card .input .search .search-btn {
  width: 120rpx;
  text-align: center;
  font-size: 16px;
  line-height: 20px;
  color: #0576b9;
  font-weight: bold;
}
.container .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 690rpx;
  margin: 20rpx 30rpx;
  padding: 20rpx 0;
  background-color: #fff;
  border: solid 1px rgba(207, 216, 220, 0.2);
  box-shadow: 0px 5px 10px rgba(172, 181, 185, 0.4);
}
.container .item .img {
  width: 140rpx;
  height: 140rpx;
}
.container .item text {
  margin: 15rpx 0;
  font-weight: bold;
}
.container .item .tips {
  width: 100%;
  margin: 25rpx 0;
  font-size: 32rpx;
}
.container .item .tips .title {
  font-weight: bold;
  margin: 16rpx;
}
.container .item .tips .ps {
  margin: 16rpx;
}
