page {
  background-color: #4ACAEF;
}
.card {
  display: flex;
  flex: 1 1 auto;
  flex-direction: column;
  width: 690rpx;
  height: 700rpx;
  margin: 100rpx 30rpx 0 30rpx;
  background-color: #fff;
  border: solid 3px rgba(207, 216, 220, 0.2);
  border-radius: 8%;
  box-shadow: 0px 5px 10px rgba(172, 181, 185, 0.4);
}
.card .header {
  display: flex;
  justify-content: space-between;
}
.card .header .index {
  margin: 20rpx;
  color: #5ca7ba;
}
.card .header .score {
  font-size: 40rpx;
  margin: 20rpx 30rpx 0 0;
  color: #ff425d;
}
.card .question {
  margin: 20rpx;
}
.card .answer {
  margin: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.card .answer .item {
  width: 100%;
  margin: 20rpx 0;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 30rpx;
  text-align: center;
  background-color: #cfd8dc;
  color: #554840;
}
.option {
  width: 690rpx;
  display: flex;
  justify-content: space-around;
  margin: 40rpx 30rpx 0 30rpx;
}
.option .btn {
  background-color: rgba(255, 252, 153, 0.8);
  width: 250rpx;
  height: 56rpx;
  text-align: center;
  border-radius: 25rpx;
  color: #554840;
}
.option .finish {
  color: #ff425d;
}
